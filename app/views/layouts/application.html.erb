<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2-debug</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
      <main>
        <%= form_with url: searchs_serch_path, method: :get, local: :true do |f| %>
         <%= f.select :range, options_for_select([['user'],['book']])%>
         <%= f.select :method, options_for_select([['完全一致','perfect_method'],['部分一致','partial_method'],['前方一致','forward_method'],['後方一致','backward_method']])%>
         <%= f.text_field :word %>
         <%= f.submit "検索" %>
        <% end %>
        <p id="notice"><%= notice %></p>
        <%= yield %>
      </main>
    <%= render 'layouts/footer' %>
  </body>
</html>
