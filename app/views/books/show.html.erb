<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info' , user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @books %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= link_to user_path(@book.user) do %>
              <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg" %><br>
              <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>
            <td id="favorite-<%= @book.id %>">
              <%= render 'favorite', book: @book %>
            </td>

            <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
            <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
            <% end %>
            <td><%= @book.book_comments.count %>コメント</td>
          </tr>
        </table>
        <table id="comment-btn">
          <%= render 'book_comments/show', book: @book %>
        </table>
        <div class="new_comment">
         <%= form_with(model:[@book, @book_comment] ) do |f| %>
         <%= f.text_area :book_comments, rows:'5', placeholder: "コメントをここに" %>
         <%= f.submit "送信する" %>
         <% end %>
      </div>
    </div>
  </div>
</div>