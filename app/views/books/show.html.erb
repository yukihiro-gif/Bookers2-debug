<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info' , user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @books %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= link_to user_path(@book.user) do %>
              <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg" %><br>
              <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>
            <td><%= render 'favorite', book: @book %></td>

            <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
            <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
            <% end %>
            <td><%= @book.book_comments.count %>コメント</td>
          </tr>
        </table>
        <table>
           <% @book.book_comments.each do |book_comment| %>
         <tr>
         <td>
            <%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></br>
            <%= book_comment.user.name %>
         </td>
         <td><%= book_comment.book_comments %></td>
             <% if book_comment.user == current_user %>
         <td><%= button_to 'Destroy', book_book_comment_path(book_comment.book,book_comment), method: :delete %></td>
             <% end %>
         </tr>
           <% end %>
       </table>
       <div class="new_comment">
        <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
        <%= f.text_area :book_comments, rows:'5', placeholder: "コメントをここに" %>
        <%= f.submit "送信する" %>
        <% end %>
      </div>
    </div>
  </div>
</div>